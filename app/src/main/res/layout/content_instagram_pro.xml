<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.swensun.swdesign.ui.ins.InstagramProActivity"
    tools:showIn="@layout/activity_instagram_pro">


    <TextView
        android:id="@+id/cip_tv_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ins行为"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/cip_spinner_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cip_tv_action"
        app:layout_constraintBottom_toBottomOf="@id/cip_tv_action"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        />

    <TextView
        android:id="@+id/cip_tv_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="行为页数"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cip_tv_action"
        android:padding="16dp"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/cip_spinner_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cip_tv_page"
        app:layout_constraintBottom_toBottomOf="@id/cip_tv_page"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        />

    <Button
        android:id="@+id/cip_btn_open_ins"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cip_tv_page"
        android:text="打开INS"/>

    <TextView
        android:id="@+id/cip_tv_attention_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cip_btn_open_ins"
        android:text="@string/auto_attention_tips"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:lineSpacingMultiplier="1.5"
        />

</android.support.constraint.ConstraintLayout>
